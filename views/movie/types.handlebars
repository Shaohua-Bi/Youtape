<div class="coolbackground">
    <section class="mx-0 pt-5 text-center bg-dark bg-opacity-75">
        <div class="row">
            <div class="col-3 p-3 mx-auto bg-black bg-opacity-25 rounded-3 text-primary">
                <h1 class="text-primary">{{type}} Movies</h1>
                <p class="lead">found {{amount}} results</p>

                <div class="row justify-content-start" id="filter-sort-example-filters">
                    <div class="col-md-6">
                        <span class="fs-5">Rating</span>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="radio" name="ratingOptions"
                                   id="filterSortRadio1" value="0" checked>
                            <label class="form-check-label" for="filterSortRadio1">ALL</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ratingOptions"
                                   id="filterSortRadio2" value="8">
                            <label class="form-check-label" for="filterSortRadio2">>= 8</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ratingOptions"
                                   id="filterSortRadio3" value="6">
                            <label class="form-check-label" for="filterSortRadio3">>= 6</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ratingOptions"
                                   id="filterSortRadio4" value="4">
                            <label class="form-check-label" for="filterSortRadio4">>= 4</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ratingOptions"
                                   id="filterSortRadio5" value="2">
                            <label class="form-check-label" for="filterSortRadio4">>= 2</label>
                        </div>
                    </div>

                    <div class="col-md-6 mb-5">
                        <span class="fs-5">Run Time</span>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="radio" name="runTimeOptions"
                                   id="filterSortRadio6" value="999" checked>
                            <label class="form-check-label" for="filterSortRadio5">ALL</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="runTimeOptions"
                                   id="filterSortRadio8" value="120">
                            <label class="form-check-label" for="filterSortRadio6">120 minutes-</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="runTimeOptions"
                                   id="filterSortRadio7" value="90">
                            <label class="form-check-label" for="filterSortRadio6">90 minutes-</label>
                        </div>
                        <label for="type-sort-select" id="type-name" hidden>{{type}}</label>
                        <select class="form-select mt-3" id="type-sort-select" name="type-sort-select">
                            <option value="ratingHL">Rating: High to Low</option>
                            <option value="ratingLH">Rating: Low to High</option>
                            <option value="releaseDateNew">Release Date: Newest First</option>
                            <option value="releaseDateOld">Release Date: Oldest First</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <div class="py-5 bg-dark bg-opacity-75">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="type-movies">
                {{#each movies}}
                    <a href="/movie/{{this._id}}" class="single-movie">
                        <p class="single-movie-rating" hidden>{{this.rating}}</p>
                        <p class="single-movie-runTime" hidden>{{this.runtime}}</p>
                        <div class="col">
                            <div class="card shadow-sm card-zoom">
                                <img class="bd-placeholder-img card-img-top" width="100" height="600"
                                     src="{{this.poster}}" alt="{{this.name}}">
                                <div class="card-body bg-dark">
                                    <p class="card-text text-center fs-5 fw-bold">{{this.name}}</p>
                                </div>
                            </div>
                        </div>
                    </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>