<div class="coolbackground">
    <section class="mx-0 pt-5 text-center bg-dark bg-opacity-75">
        <div class="row">
            <div class="col-3 p-3 mx-auto bg-black bg-opacity-25 rounded-3">
                <h1 class="text-primary">Search '{{search}}'</h1>
                <p class="lead text-primary">found {{amount}} results</p>

                <div class="row justify-content-start text-primary" id="filter-sort-example-filters">
                    <div class="col-md-6">
                        <span class="fs-5">Rating</span>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="radio" name="ratingOptions"
                                   id="filterSortRadio1" value="0" checked>
                            <label class="form-check-label" for="filterSortRadio1">ALL</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ratingOptions"
                                   id="filterSortRadio2" value="8">
                            <label class="form-check-label" for="filterSortRadio2">>= 8</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ratingOptions"
                                   id="filterSortRadio3" value="6">
                            <label class="form-check-label" for="filterSortRadio3">>= 6</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ratingOptions"
                                   id="filterSortRadio4" value="4">
                            <label class="form-check-label" for="filterSortRadio4">>= 4</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ratingOptions"
                                   id="filterSortRadio5" value="2">
                            <label class="form-check-label" for="filterSortRadio5">>= 2</label>
                        </div>
                    </div>

                    <div class="col-md-6 mb-5">
                        <span class="fs-5">Run Time</span>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="radio" name="runTimeOptions"
                                   id="filterSortRadio6" value="999" checked>
                            <label class="form-check-label" for="filterSortRadio6">ALL</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="runTimeOptions"
                                   id="filterSortRadio7" value="120">
                            <label class="form-check-label" for="filterSortRadio7">120 minutes-</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="runTimeOptions"
                                   id="filterSortRadio8" value="90">
                            <label class="form-check-label" for="filterSortRadio8">90 minutes-</label>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="py-5 bg-dark bg-opacity-75">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <!--single movie card-->
                {{#each movie}}
                    <a href="/movie/{{this._id}}" class="single-movie">
                        <p class="single-movie-rating" hidden>{{this.rating}}</p>
                        <p class="single-movie-runTime" hidden>{{this.runtime}}</p>
                        <div class="col">
                            <div class="card shadow-sm card-zoom">
                                <img class="bd-placeholder-img card-img-top" alt="{{this.name}}" width="100" height="600"
                                     src="{{this.poster}}">
                                <div class="card-body bg-dark">
                                    <p class="card-text text-center fs-5 fw-bold">{{this.name}}</p>
                                </div>
                            </div>
                        </div>
                    </a>
                {{/each}}

            </div>
        </div>
    </div>
</div>